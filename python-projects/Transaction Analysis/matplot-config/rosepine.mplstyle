# Ros√© Pine Matplotlib Theme

# Figure background color
figure.facecolor: "#191724"

# Axes styling
axes.facecolor: "#191724"
axes.edgecolor: "#e0def4"
axes.labelcolor: "#e0def4"
axes.titlesize: 16
axes.labelsize: 14

# Tick styling
xtick.color: "#e0def4"
ytick.color: "#e0def4"
xtick.labelsize: 10
ytick.labelsize: 10

# Text color
text.color: "#e0def4"

# Grid styling
grid.color: "#e0def4"
grid.alpha: 0.3
axes.grid: True

# Spines (borders) styling
axes.spines.top: False
axes.spines.right: False

# Line styling
lines.linewidth: 2.0

# Patch (e.g., bar edges) styling
patch.edgecolor: "#e0def4"

# Font styling
font.size: 12

# Custom colors for multiple line plots (fixed cycler syntax)
axes.prop_cycle: "cycler('color', ['#c4a7e7', '#eb6f92', '#31748f', '#f6c177', '#e0def4'])"

# Legend background color
legend.facecolor: "#191724"
legend.edgecolor: "#e0def4"

